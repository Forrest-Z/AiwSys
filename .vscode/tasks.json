{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [ 
        {
           "label": "Bazel Build Cyber",
           "type": "shell",
           "command": "bazel",
           "args": [
               "build",
               "//cyber/...",
               "--cpu=k8"
           ],
           "problemMatcher": [
               "$gcc",
           ],
           "group": "build"
       },
       {
        "label": "Bazel Build Monitor",
        "type": "shell",
        "command": "bazel",
        "args": [
            "build",
            "//modules/monitor/...",
            "--cpu=k8"
        ],
        "problemMatcher": [
            "$gcc",
        ],
        "group": "build"
    },
       {
        "label": "Bazel Build App",
        "type": "shell",
        "command": "bazel",
        "args": [
            "build",
            "//modules/app/...",
            "--cpu=k8"
        ],
        "problemMatcher": [
            "$gcc",
        ],
        "group": "build"
       },
       {
        "label": "Bazel Build Test",
        "type": "shell",
        "command": "bazel",
        "args": [
            "build",
            "//modules/test/test_caffe/...",
            "--compilation_mode=dbg",
        ],
        "problemMatcher": [
            "$gcc",
        ],
        "group": "build"
       },
       {
           "label": "Bazel Clear ",
           "type": "shell",
           "command": "bazel",
           "args": [
               "clean",
               "--expunge",
           ],
           "problemMatcher": [
               "$gcc",
           ],
           "group": "build"
       },

    ]
}